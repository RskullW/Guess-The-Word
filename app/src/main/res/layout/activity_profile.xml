<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonBackMenuFromProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="16dp"
                android:background="@null"
                android:contentDescription="BackMenuFromProfile"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back_menu" />

            <com.guesstheword.text.Outline.OutlineTextView
                android:id="@+id/titleProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:text="ПРОФИЛЬ"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/pf_play"
                android:background="@drawable/rounded_title_background"
                android:textSize="@dimen/text_size_large40"
                android:textStyle="bold"
                app:fontFamily="@font/pf_play" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_game_mode_background_mode">

            <com.guesstheword.text.Outline.OutlineTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Статистика"
                android:fontFamily="@font/lc_chalk"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="@dimen/text_size_large24"
                android:textStyle="bold"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/rounded_stats_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.guesstheword.text.Outline.OutlineTextViewWhite
                    android:id="@+id/victoryOutlineTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Слов угадано: "
                    android:fontFamily="@font/pf_play"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_large28"
                    android:textStyle="bold" />

                <com.guesstheword.text.Outline.OutlineTextViewWhite
                    android:id="@+id/defeatOutlineTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Поражений: "
                    android:fontFamily="@font/pf_play"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_large28"
                    android:textStyle="bold" />

                <com.guesstheword.text.Outline.OutlineTextViewWhite
                    android:id="@+id/allRoundsOutlineTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Игр сыграно: "
                    android:fontFamily="@font/pf_play"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_large28"
                    android:textStyle="bold" />

                <com.guesstheword.text.Outline.OutlineTextViewWhite
                    android:id="@+id/likeCategoryOutlineTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:text="Любимая категория: "
                    android:fontFamily="@font/pf_play"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_large28"
                    android:textStyle="bold" />

            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="40dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/buttonPlayTelegram"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_ready_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="6dp"
                        app:srcCompat="@drawable/telegram" />

                    <TextView
                        android:id="@+id/textPlayTelegram"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/lc_chalk"
                        android:gravity="center_vertical"
                        android:text="Играть в телеграме"
                        android:textColor="#131313"
                        android:textSize="@dimen/text_size_large20"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/buttonResetStats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_ready_background"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="6dp"
                        app:srcCompat="@drawable/restart" />

                    <TextView
                        android:id="@+id/textResetStats"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/lc_chalk"
                        android:gravity="center_vertical"
                        android:text="Сбросить статистику"
                        android:textColor="#131313"
                        android:textSize="@dimen/text_size_large20"
                        android:textStyle="bold" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>